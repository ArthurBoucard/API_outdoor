<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster/dist/MarkerCluster.Default.css" />
    <style>
        #map {
            height: 500px;
            width: 100%;
        }
    </style>
</head>
<body>
<h1>Map</h1>
<div id="map"></div>

<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
<script src="https://unpkg.com/leaflet.markercluster/dist/leaflet.markercluster.js"></script>
<script>
    const map = L.map('map').setView([51.505, -0.09], 13); // Default center (can be adjusted)

    // Set up the tile layer (use OpenStreetMap tiles)
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    // Initialize the marker cluster group
    const markerCluster = L.markerClusterGroup();

    // Fetch POI data from your API route
    fetch('/pois')
        .then(response => response.json())
        .then(pois => {
            pois.forEach(poi => {
                let emoji;

                switch(poi.type) {
                    case "unguardedRefuge":
                        emoji = "üèöÔ∏è";
                        break;
                    case "guardedRefuge":
                        emoji = "üè†";
                        break;
                    case "lodge":
                        emoji = "üè°";
                        break;
                    case "waterPoint":
                        emoji = "üíß";
                        break;
                    case "summit":
                        emoji = "‚õ∞Ô∏è";
                        break;
                    case "difficultPassage":
                        emoji = "‚ö†Ô∏è";
                        break;
                    case "bivouac":
                        emoji = "‚õ∫";
                        break;
                    case "lake":
                        emoji = "üåä";
                        break;
                    default:
                        emoji = "‚ùì";
                }

                const marker = L.marker([poi.latitude, poi.longitude])
                    .bindPopup(`<b>${poi.name}</b><br>${emoji} ${poi.type}<br><br>${poi.description}`);

                markerCluster.addLayer(marker);
            });

            // Add the cluster group to the map
            map.addLayer(markerCluster);
        })
        .catch(error => console.error('Error fetching POI data:', error));
</script>
</body>
</html>
